{
    "name": "nocturnal/easy-html-purifier",
    "description": "A Laravel package to sanitize input using HTML Purifier",
    "type": "package",
    "keywords": ["Laravel HtmlPurifier", "Laravel Purifier", "Laravel Security", "HtmlPurifier", "Purifier", "security", "xss"],
    "homepage": "https://github.com/TheSaifZaman/easy-html-purifier",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nocturnal\\EasyHtmlPurifier\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Md Saif Zaman",
            "email": "info.saifzaman@gmail.com",
            "homepage": "https://github.com/TheSaifZaman",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ezyang/htmlpurifier": "^4.16.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nocturnal\\EasyHtmlPurifier\\EasyHtmlPurifierServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
